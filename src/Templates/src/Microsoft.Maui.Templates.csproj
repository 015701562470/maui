<Project Sdk="Microsoft.Build.NoTargets">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <PackageType>Template</PackageType>
    <PackageId>Microsoft.Maui.Templates</PackageId>
    <PackageVersion>0.0.1-alpha1</PackageVersion>
    <Title>.NET Maui Templates</Title>
    <Authors>Microsoft</Authors>
    <Description>Templates for .NET Maui.</Description>
    <IncludeContentInPack>true</IncludeContentInPack>
    <IncludeBuildOutput>false</IncludeBuildOutput>
    <IncludeSymbols>false</IncludeSymbols>
    <ContentTargetFolders>content</ContentTargetFolders>
    <!-- This project has no .NET assemblies, so disable the warning for that -->
    <NoWarn>$(NoWarn);NU5128</NoWarn>
  </PropertyGroup>

  <ItemGroup>
    <_TemplateFile Include="maui-mobile/MauiApp1/MauiApp1.in.csproj" />
    <_TemplateFile Include="maui-mobile/MauiApp1.WinUI3/MauiApp1.WinUI3.in.csproj" />
    <_TemplateFile Include="maui-mobile/MauiApp1.WinUI3 (Package)/MauiApp1.WinUI3 (Package).in.wapproj" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="**/*" Exclude="**/bin/**;**/obj/**;$(MSBuildProjectFile)*;@(_TemplateFile)" />
    <Compile Remove="**/*" />
  </ItemGroup>

  <ItemGroup>
    <_TemplateFileDest Include="$(IntermediateOutputPath)\$([System.IO.Path]::GetFileName(%(_TemplateFile.Identity)).Replace('.in',''))" />
  </ItemGroup>

  <!-- Eventually replaced by eng/Versions.targets -->
  <Target Name="SetVersions" />

  <Target Name="_GenerateTemplateFile"
      BeforeTargets="Build"
      DependsOnTargets="SetVersions"
      Inputs="$(MSBuildProjectFile);$(_TemplateFile)"
      Outputs="@(_TemplateFileDest)">
    <Copy
        SourceFiles="@(_TemplateFile)"
        DestinationFiles="$(IntermediateOutputPath)\$([System.IO.Path]::GetFileName(%(_TemplateFile.Identity)).Replace('.in',''))"
    />

    <Message Text="$(IntermediateOutputPath)\$([System.IO.Path]::GetFileName(%(_TemplateFile.Identity)).Replace('.in',''))" />
    <!-- <XmlPoke
        XmlInputPath="@(_TemplateFileDest)"
        Value="$(PackageVersion)"
        Query="/Project/ItemGroup/PackageReference/@Version"
    /> -->
    <ItemGroup>
      <Content Include="@(_TemplateFileDest)" PackagePath="content/maui-mobile" />
      <FileWrites Include="@(_TemplateFileDest)" />
    </ItemGroup>
  </Target>

</Project>