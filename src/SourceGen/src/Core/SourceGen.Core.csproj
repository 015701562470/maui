<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Nullable>enable</Nullable>
    <AssemblyName>Microsoft.Maui.SourceGen.Core</AssemblyName>
    <RootNamespace>Microsoft.Maui.SourceGen.Core</RootNamespace>
    <IsPackable>false</IsPackable>
    <NoWarn>$(NoWarn);NU5128;</NoWarn>
  </PropertyGroup>

  <PropertyGroup>
    <EnableMauiFontRegistrationGenerator Condition="'$(EnableMauiFontRegistrationGenerator)' == ''">True</EnableMauiFontRegistrationGenerator>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\Util\SourceGen.Util.csproj" />
  </ItemGroup>
  
  <ItemGroup>
    <None Include="$(OutputPath)\$(AssemblyName).dll" Pack="true" PackagePath="analyzers/dotnet/cs" Visible="false" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.CodeAnalysis.CSharp" Version="3.9.0" PrivateAssets="All" />
  </ItemGroup>

  <PropertyGroup>
    <GetTargetPathDependsOn>$(GetTargetPathDependsOn);GetDependencyTargetPaths</GetTargetPathDependsOn>
  </PropertyGroup>

  <Target Name="GetDependencyTargetPaths">
    <ItemGroup>
      <TargetPathWithTargetPlatformMoniker Include="$(MSBuildThisFileDirectory)..\..\..\Core\src\bin\$(Configuration)\netstandard2.0\Microsoft.Maui.dll" IncludeRuntimeDependency="false" />
    </ItemGroup>
  </Target>


</Project>
