<?xml version="1.0" encoding="UTF-8"?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Controls.Sample.UITests.Elements.StackLayoutSpacing"
    Title="StackLayout Spacing (20)">
    <ContentPage.Resources>
        <ResourceDictionary>

            <Style TargetType="Rectangle">
                <Setter Property="HeightRequest" Value="50" />
                <Setter Property="WidthRequest" Value="50" />
            </Style>

        </ResourceDictionary>
    </ContentPage.Resources>
    <StackLayout
        Margin="20"     
        Spacing="20">
        <Label
            Text="Primary colors" />
        <Rectangle 
            Fill="Red" />
        <Rectangle
            Fill="Yellow" />
        <Rectangle 
            Fill="Blue" />
        <Label
            Text="Secondary colors" />
        <Rectangle 
            Fill="Green" />
        <Rectangle 
            Fill="Orange" />
        <Rectangle
            Fill="Purple" />
    </StackLayout>
</ContentPage>
