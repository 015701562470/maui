<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="Maui.Controls.Sample.BorderBackground"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    AutomationId="BorderBackground">

    <Grid
        BackgroundColor="Blue"
        ColumnDefinitions="*"
        HeightRequest="200"
        RowDefinitions="*"
        WidthRequest="200">
        <Border
            AutomationId="WaitForControl"
            HeightRequest="200"
            Stroke="Red"
            StrokeThickness="10"
            WidthRequest="200">
            <Label Text="Test" />
        </Border>
    </Grid>

</ContentView>