<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.Controls.Sample.Issues.Issue18613"
             xmlns:local="clr-namespace:Maui.Controls.Sample.Issues">
    <ContentPage.BindingContext>
        <local:Issue18613ViewModel />
    </ContentPage.BindingContext>
    <VerticalStackLayout>
        <Label 
            AutomationId="WaitForStubControl" 
            Text="1. Confirm that the button below is disabled." />
        <Label 
            Text="2. The test fails if the button is enabled and clickable." />
        <Button 
            AutomationId="ButtonControl"
            Clicked="OnButtonClicked"
            Command="{Binding Command}"
            IsEnabled="{Binding IsButtonEnabled}"
            Text="Button" />
        <Label 
            AutomationId="CounterLabel"
            Text="{Binding Counter}"/>
    </VerticalStackLayout>
</ContentPage>