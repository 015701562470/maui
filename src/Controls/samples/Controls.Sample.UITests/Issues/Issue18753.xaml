<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.Controls.Sample.Issues.Issue18753">
    <ScrollView>
        <VerticalStackLayout>
            <Label
                AutomationId="WaitForStubControl"
                Text="1. Enter the string 'hi my name is james' exactly (case-sensitive)." />
            <Label 
                Text="2. The test fails if the keyboard presents word suggestions." />
            <Editor
                AutomationId="EditorIsTextPredictionDisabled"
                IsTextPredictionEnabled="False" />
            <Label 
                Text="3. Enter the string 'hi my name is james' exactly (case-sensitive)." />
            <Label 
                Text="4. The test fails if the keyboard does not present word suggestions." />
            <Editor 
                AutomationId="EditorIsTextPredictionEnabled"
                IsTextPredictionEnabled="True" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>