<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Maui.Controls.Sample.MainPage"
    Title=".NET 7 MAUI"
    xmlns:local="clr-namespace:Maui.Controls.Sample">

    <ScrollView>
        
        <StackLayout x:Name="addBoxes" Spacing="5">
            <Label 
            x:Name="hoverLabel"
            FontSize="24"
            Text="Hover me!"
            ToolTipProperties.Text="I HAVE A CONTEXT MENU"
            >
                <Label.GestureRecognizers>
                    <PointerGestureRecognizer PointerEntered="HoverBegan" PointerExited="HoverEnded" PointerMoved="HoverMoved" />
                </Label.GestureRecognizers>
                <FlyoutBase.ContextFlyout>
                    <MenuFlyout>
                        <MenuFlyoutSubItem Text="Add Control">
                            <MenuFlyoutItem Text="Add Box" Clicked="MenuFlyoutItem_Clicked"></MenuFlyoutItem>
                        </MenuFlyoutSubItem>
                    </MenuFlyout>
                </FlyoutBase.ContextFlyout>
                
            </Label>
            
            <Label x:Name="positionLabel" Text="Hover above label to reveal pointer position"/>

            <Button x:Name="resizeWindow" Text="This window is WAY too big" FontSize="30" Clicked="Button_Clicked"></Button>
        </StackLayout>
    </ScrollView>
</ContentPage>